<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;
        width: 40%;
    }

    .card:hover {
        box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
    }

    .container {
        padding: 2px 16px;
    }

    td {
        padding: 10px;
        font-size: 20px;
        border-bottom: 1px solid black;
    }
</style>
<br />
<br />
<div class="container text-center">
    <h3>
        Profile
    </h3>
    <img src="<%= user.avatar %> " alt="profile pic">

    <table style="margin-left: auto; margin-right: auto;">
        <tr>
            <td>
                Name:
            </td>
            <td>
                <%= user.fullname  %>
            </td>
        </tr>
        <tr>
            <td>
                Username:
            </td>
            <td>
                <%= user.username %>
            </td>
        </tr>
        <tr>
            <td>
                Email:
            </td>
            <td>
                <%= user.email %>
            </td>
        </tr>
        <tr>
            <td>
                ETH ID:
            </td>
            <td>
                <%= user.auth %>
            </td>
        </tr>
        <tr>
            <td>
                Account Balance:
            </td>
            <td>
                <%= user.balance %>
            </td>
        </tr>
    </table>
</div>

<hr>

<br>


</html>